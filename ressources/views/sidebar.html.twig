			<a href="#tab1" role="tab" data-toggle="tab">
				DERNI&Egrave;RE PUBLICATIONS
			</a>
		</li>
	</ul>
	<div class="tab-content">
		<div role="tabpanel" class="tab-pane active" id="tab1">
			<ul class="list-news-popular">

				{% for article in sidebar %}
					<li>
						<a href="">
							<img alt="{{ article.TITREARTICLE }}" src="{{ asset('assets/images/product/' ~ article.FEATUREDIMAGEARTICLE)}}">
						</a>
						<h3><a href="#">{{ article.TITREARTICLE }}</a></h3>
						<div class="meta-post">
							<a href="#">
								{{ article.PRENOMAUTEUR ~ ' ' ~ articleNOMAUTEUR }}

							</a>
