<div class="page">
  <div class="container">
    <!--header-->
    <header class="header">
      <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <a href="{{ url('technews_home') }}" class="logo">
            <img alt="Logo" src="{{asset('assets/images/logo.png')}}"/>
          </a>
        </div>
      </div>
    </header>
    <!--menu-->
    <nav class="menu font-heading">
      <div class="menu-icon hidden-lg hidden-md">
        <i class="fa fa-navicon"></i>
        <span>MENU</span>
      </div>
      <ul class="hidden-sm hidden-xs">
        <li {% if 'accueil' == active %} class="current" {% endif %}>
          <a href="{{ url('technews_home') }}">Accueil</a>
        </li>
        {% for categorie in categories %}
          <li {% if categorie.LIBELLECATEGORIE == active %} class="current" {% endif %}>
